<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @satinal.title %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <%= image_tag(@satinal.photo_url, width: '100%') %>
    </div>
    <div class="col-sm-12 col-md-6">
      <p>Some awesome description of our amazing satinal.</p>
      <p><%= @satinal.location %></p>
            <p>Amount: <%= humanized_money_with_symbol(@satinal.price) %></p>

      <p>$$$</p>
      <%= form_tag orders_path do %>
  <%= hidden_field_tag 'satinal_id', @satinal.id %>
  <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
<% end %>
    </div>
  </div>
</div>
